# monitor
# https://blog.summercat.com/configuring-mixed-dpi-monitors-with-xrandr.html
# https://www.youtube.com/watch?v=wu2NWw2wPaA
INTERNAL_MONITOR=$(xrandr | \grep primary | cut -d' ' -f1)
EXTERNAL_MONITOR=$(xrandr | \grep ' connected' | tail -1 | cut -d' ' -f1)
function external-monitor() {
    xrandr --output "${EXTERNAL_MONITOR}" --scale 1x1 --output "${INTERNAL_MONITOR}" --off && xrandr --dpi 100 --output ${EXTERNAL_MONITOR} --auto && i3-msg restart > /dev/null\
}
function internal-monitor() {
    xrandr --dpi 100 --output "${INTERNAL_MONITOR}" --mode 2048x1152 --output ${EXTERNAL_MONITOR} --off && i3-msg restart > /dev/null
}
function monitor() { [[ "$1" == "1" ]] && internal-monitor || external-monitor }
alias internal-monitor-scale="xrandr --output ${INTERNAL_MONITOR} --mode 2560x1440"

