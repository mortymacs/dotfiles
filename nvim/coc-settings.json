{
  "rust-analyzer.server.path": "rust-analyzer",
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {}
    },
    "dockerfile": {
      "command": "docker-langserver",
      "args": ["--stdio"],
      "filetypes": ["dockerfile"]
    },
    "sql": {
      "command": "sql-language-server",
      "args": ["up", "--method", "stdio"],
      "filetypes": ["sql", "db"]
    }
  },
  "yaml.schemas": {
    /* Docker-Compose */
    "https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json": ["/docker-compose.yaml", "/docker-compose.yml"]
    /* Kubernetes */
    /* "kubernetes": ["/*.yaml", "/*.yml"], */
    /* Argo */
    /* "https://raw.githubusercontent.com/argoproj/argo-workflows/master/api/jsonschema/schema.json": ["/*.yaml", "/*.yml"] */
  }
}
